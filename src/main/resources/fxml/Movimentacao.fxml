<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.controller.MovimentacaoController" prefWidth="600" prefHeight="400">
    <children>
        <VBox spacing="8" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <HBox spacing="8" alignment="CENTER_RIGHT">
                <Label text="Lan&#231;amento de Movimenta&#231;&#227;o" style="-fx-font-size:16px; -fx-font-weight:bold;" HBox.hgrow="ALWAYS"/>
                <Button text="Voltar" onAction="#onVoltar"/>
            </HBox>
            <GridPane hgap="8" vgap="8">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                    <ColumnConstraints minWidth="300" hgrow="ALWAYS"/>
                </columnConstraints>
                <Label text="Conta:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ChoiceBox fx:id="cbConta" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Data:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dpData" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Ação:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ChoiceBox fx:id="cbAcao" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Valor:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="tfValor" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="8" alignment="CENTER_RIGHT">
                <Button text="Lan&#231;ar" onAction="#onLancar"/>
            </HBox>

            <TableView fx:id="tableMov" prefHeight="200" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colConta" text="Conta" prefWidth="200"/>
                    <TableColumn fx:id="colData" text="Data" prefWidth="120"/>
                    <TableColumn fx:id="colAcao" text="Ação" prefWidth="120"/>
                    <TableColumn fx:id="colValor" text="Valor" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
